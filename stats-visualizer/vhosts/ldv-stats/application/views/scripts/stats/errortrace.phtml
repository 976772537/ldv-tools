        $(document).ready(function() {
          $('.ETVHelp').before('<div id=\"SETVHelpShowHide\"><a href=\"#\" id=\"SETVHelpShowHideLink\">Error trace visualizer help</a></div>');
          $('#SETVHelpShowHideLink').toggle(function() {
            $('.ETVHelp').show();
            return false;
          } , function() {
            $('.ETVHelp').hide();
            return false;
          });
        });
      </script>";

